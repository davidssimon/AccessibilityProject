{
    "manifest_version": 3,
    "name": "Colorblind Assistance",
    "version": "1.0",
    "description": "A tool to make browsing easier for colorblind people",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/color.png"
    },
    "icons": {
      "16": "images/color.png",
      "48": "images/color.png",
      "128": "images/color.png"
    }
  }
  