{
    "name": "Group Project",
    "manifest_version": 3,
    "version": "0.1",
    "description": "Customize contents on a webpage!",
    "permissions": [
      "tabs",
      "scripting",
      "tabCapture",
      "activeTab",
      "offscreen"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "service-worker.js"
    },
    "content_scripts": [
      {
        "css": ["inject.css"],
        "matches": ["<all_urls>"]
      }
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }